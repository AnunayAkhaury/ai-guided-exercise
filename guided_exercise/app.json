{
  "expo": {
    "name": "guided_exercise",
    "slug": "guided_exercise",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "guidedexercise",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to share your video",
        "NSMicrophoneUsageDescription": "This app uses the microphone to share your audio",
        "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth for audio devices",
        "NSPhotoLibraryUsageDescription": "This app uses the photo library for screen sharing"
      },
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.guided-exercise"
    },
    "android": {
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "BLUETOOTH",
        "BLUETOOTH_CONNECT",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.anonymous.guided_exercise"
    },
    "web": {
      "output": "static"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera."
        }
      ],
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "minSdkVersion": 28,
            "buildToolsVersion": "35.0.0"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
